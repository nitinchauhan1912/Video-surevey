<div class="email_questions question-style" style="display:none;">
   <div id="video_title"><h3>Collect Email a - <span class="added_at"></span></h3></div> 
   <div class="question_form_container">
    <%= form_tag('/questions', remote: true, id: 'open_question_form') do %>
     <div id="email_question_textfield">
       <p>Text on the popup box to prompt user to enter name and email address</p>
       <%= hidden_field_tag 'video_id', @video.id %>
       <%= hidden_field_tag :interaction_at, 0, {:id => 'email_interaction_at'}%>
       <%= hidden_field_tag :interaction_at_offset, 0, {:id => 'email_interaction_at_offset'}%>
       <%= hidden_field_tag 'question_type', "email" %>
       <%= text_area_tag "question_title", "" %>
       <span class="email_error error"></span>
        <!-- <div id="email_button"> -->
        <p>Button Label- if left blank, will read 'Continue'</p>
        <%= text_field_tag "button_text", "", style: "margin:13px" %>
        <!-- </div> -->
     </div>
       
     <div id="submit_actions" style="margin-top:60px;">
          <%= link_to 'Cancel', 'javascript:void(0);' , class: 'btn remove_popup btn-default video_overlay_off' %>
          <%= submit_tag 'Save', class: 'btn save_interaction btn-primary btn-small video_overlay_off'%>
      </div>
    <% end %>
   </div> 
</div>