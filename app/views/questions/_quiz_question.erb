<div class="quiz_questions question-style" style="display:none;">
  <div id="video_title"><h3>Add a Quiz at - <span class="added_at"></span></h3></div>
  <div class="question_form_container">
        <%= form_tag('/questions', remote: true, id: 'quiz_question_form') do %>
	<div id="quiz_question_textfield">
            <%= hidden_field_tag 'video_id', @video.id %>
            <%= hidden_field_tag :interaction_at, 0, {:id => 'quiz_interaction_at'}%>
            <%= hidden_field_tag :interaction_at_offset, 0, {:id => 'quiz_interaction_at_offset'}%>
            <%= hidden_field_tag 'question_type', "quiz" %>
            <%= text_area_tag "question_title", "", placeholder: "Question here"%>
            <span class="quiz_error error"></span>
	</div>
        <div id="quiz_question_choices" class="quiz_question_choices">
          <div class="radio_btns">
            <span class="radio-sprite"></span>
            <%= text_field_tag 'choice_1', "", placeholder: "Choice 1" %>
          </div>
          <div class="radio_btns">
            <span class="radio-sprite"></span><%= text_field_tag 'choice_2', "", placeholder: "Choice 2" %>
          </div>
          <div class="radio_btns">
            <span class="radio-sprite"></span><%= text_field_tag 'choice_3', "", placeholder: "Choice 3" %>
          </div>
          <div class="radio_btns">
            <span class="radio-sprite"></span><%= text_field_tag 'choice_4' , "", placeholder: "Choice 4"%>
          </div>
	</div>
	<div id="submit_actions">
            <%= link_to 'Cancel', 'javascript:void(0);' , class: 'btn remove_popup btn-default' %>
            <%= submit_tag 'Save', class: 'btn save_interaction btn-primary btn-small'%>
	</div>
	<% end %>
    </div>
</div>